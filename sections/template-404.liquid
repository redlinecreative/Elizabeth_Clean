<div class="max-w-md">
    <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
    <div class="my-4">
        <div class="text-base md:text-xl leading-normal">{{ section.settings.subtext }}</div>
    </div>
</div>

{% schema %}
    {
        "name":"Template 404",
        "tag":"section",
        "class":"flex items-center justify-center text-center py-7 h-screen",
        "settings": [
            {
                "id": "title",
                "type":"text",
                "label": "Title",
                "default":"404"
            },
            {
                "id": "subtext",
                "type":"text",
                "label": "Title Subtext",
                "default":"The page you were looking for could not be found."
            },
        ]
    }
{% endschema %}